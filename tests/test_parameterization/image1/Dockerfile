FROM busybox

ARG BUILD_PARAM_ARG_A
ENV BUILD_PARAM_EVN_A ${BUILD_PARAM_ARG_A:-DEFAULT}

ARG BUILD_PARAM_ARG_B
ENV BUILD_PARAM_ENV_B ${BUILD_PARAM_ARG_B}

ARG BUILD_PARAM_ARG_C
ENV BUILD_PARAM_EVN_C ${BUILD_PARAM_ARG_C:-DEFAULT}

RUN echo A $BUILD_PARAM_A >>/test.out
RUN echo B $BUILD_PARAM_B >>/test.out
RUN echo C $BUILD_PARAM_C >>/test.out
